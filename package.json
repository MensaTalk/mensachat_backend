{
  "name": "nodejs_stack",
  "version": "1.0.0",
  "description": "NodeJS Stack",
  "scripts": {
    "build": "rimraf dist && tsc --build tsconfig.json",
    "start": "ts-node --project tsconfig.json src/index.ts",
    "start:dev": "tsc-watch -p tsconfig.json --onSuccess \"node ./dist/index.js\"",
    "start:debug": "tsc-watch -p tsconfig.json --onSuccess \"node --inspect-brk ./dist/index.js\"",
    "start:prod": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MensaTalk/nodejs_stack.git"
  },
  "keywords": [
    "nodejs",
    "stack"
  ],
  "author": "Tilman MÃ¶ller",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MensaTalk/nodejs_stack/issues"
  },
  "homepage": "https://github.com/MensaTalk/nodejs_stack#readme",
  "devDependencies": {
    "@types/jest": "^26.0.16",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/socket.io": "^2.1.11",
    "axios": "^0.21.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "rimraf": "^3.0.2",
    "socket.io": "^3.0.3"
  }
}
